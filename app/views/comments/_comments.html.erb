<% if @comments.present? %>  
  <h1><%= t('views.common.title_index', name: Comment.model_name.human) %></h1>
<% end %>

<% @comments.each do |comment| %>
  <div class="comment-item">
    <header class="comment-header">
      <% if comment.user.nil? %>
        <strong><%= t('views.common.withdrawn') %></strong>
      <% else %>
        <strong><%= link_to comment.user.name_or_email, comment.user %></strong>
      <% end %>
      <%= I18n.l comment.created_at, format: :short %>
    </header>

    <p>
      <%= comment.content %>
    </p>

    <% if comment.user_id == current_user.id %>
      <%= button_to t('views.common.destroy', name: Comment.model_name.human.downcase), [@book,comment] , method: :delete %>
    <% end %>
  </div>
<% end %>

